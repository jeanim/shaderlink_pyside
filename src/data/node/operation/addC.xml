<?xml version="1.0"?> 

<node name="addC" author="Libero Spagnolini">
	<help>Add two colors.</help>
	<input>
		<property name="inColor1" type="color"/>		
		<property name="inColor2" type="color"/>		
	</input>
	<output>
		<property name="outColor" type="color" />		
	</output>
	<code><![CDATA[color $(outColor) = $(inColor1) + $(inColor2);]]>
	</code>
	<preview>
		<shader type="surface">
			<code><![CDATA[Ci = $(outColor); Oi = 1.0;]]>
			</code>
		</shader>
	</preview>		
</node>