<?xml version="1.0"?> 

<node name="transform" author="Libero Spagnolini">
	<help>Transform a point into a specific coordinate system.</help>
	<input>
		<property name="coords" type="string" default="'shader'"/>		
		<property name="inPoint" type="point"/>				
	</input>
	<output>
		<property name="outPoint" type="point"/>		
	</output>
	<code><![CDATA[point $(outPoint) = transform($(coords), $(inPoint));]]>
	</code>
</node>